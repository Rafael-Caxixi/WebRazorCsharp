<MudCard>
    <MudCardMedia Image=@Imagem></MudCardMedia>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Cinema!.Nome</MudText>
        </CardHeaderContent>
    </MudCardHeader>
@*     <MudCardContent>
        <MudText Typo="Typo.body2">@Cinema!.Id</MudText>
    </MudCardContent> *@
    <MudCardActions>
        <MudButton Color="Color.Warning"
                   Variant="Variant.Outlined"
                   Href=@($"/editar-cinema/{Cinema!.Nome}")>Detalhes</MudButton>
    </MudCardActions>
</MudCard>


@code {
    [Parameter]
    public CinemaResponse? Cinema { get; set; }
    public string? Imagem { get; set; }

    protected override void OnInitialized()
    {
        Imagem = Cinema!.FotoPerfil!.Contains("Foto") ? $"https://localhost:7089/{Cinema!.FotoPerfil}" : "images/CardCinema.jpg";
    }
}